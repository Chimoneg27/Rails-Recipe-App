<h1>This is for recipe</h1>
<div id="recipes">
  <% @recipes.each do |recipe| %>
    <%= render recipe %>
    <% if recipe.public == true || recipe.user_id == current_user.id %>
      <p>
        <%= link_to recipe.name, recipe %>
      </p>
    <% else %>
      <p>
        <%= recipe.name %>
      </p>
    <% end %>

    <p>
      <%= recipe.description %>
    </p>

    <% if recipe.user_id == current_user.id %>
      <%= button_to "Remove", recipe, method: :delete %>
    <% end %>
  <% end %>
</div>