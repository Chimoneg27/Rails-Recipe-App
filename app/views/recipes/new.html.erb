<%= form_with(model: @recipe, class: "form") do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'w-100 mb-2' %>
  </div>

  <div class="form-group">
    <%= form.label :preparation_time %>
    <%= form.number_field :preparation_time, class: 'w-100 mb-2' %>
  </div>

  <div class="form-group">
    <%= form.label :cooking_time %>
    <%= form.number_field :cooking_time, class: 'w-100 mb-2' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'w-100 mb-2' %>
  </div>

  <div class="form-group">
    <%= form.submit class: 'btn btn-outline-primary' %>
  </div>
<% end %>